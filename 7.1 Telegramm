fail = open(input("Sisestage failinimi: "), encoding="UTF-8")
telegramm =  fail.read()
telegramm = telegramm.replace("Ä", "AE")
telegramm = telegramm.replace("ä", "AE")
telegramm = telegramm.replace("Õ", "OE")
telegramm = telegramm.replace("õ", "OE")
telegramm = telegramm.replace("Ü", "UE")
telegramm = telegramm.replace("ü", "UE")
telegramm = telegramm.replace("Ö", "OE")
telegramm = telegramm.replace("ö", "OE")
telegramm = telegramm.upper()
print(telegramm)
